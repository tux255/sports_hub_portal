<%= form_for [:admin,@category] do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field-group mb-2">
    <%= f.text_area :title, class: 'form-control', placeholder: 'Category Title' %>
  </div>

  <div class="field-group mb-2">
    <%= f.select :parent_id, options_from_collection_for_select(Category.top_level.where.not(id: params[:id]), 'id', 'title' ), {include_blank:'Choose parent'}, {class:'custom-select'} %>
  </div>

  <div class="field-group mb-2">
    <%= link_to 'Cancel', admin_categories_path, class: 'btn btn-outline-dark' %>
    <%= f.submit 'Save', class: 'btn btn-outline-success' %>
  </div>
<% end %>
