<% content_for(:add_item_button) { link_to 'Add Category', new_admin_category_path, class: 'btn btn-outline-danger' } %>

<div class="row py-3">
  <h2>Categories</h2>
  <div class="col-12">
    <% @posts.each do |post| %>
      <%= render partial: 'admin/shared/post', locals: {post: post} %>
    <% end %>
  </div>
</div>
