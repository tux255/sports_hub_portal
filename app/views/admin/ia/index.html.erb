<% content_for(:page_title) { "Information Architecture" } %>

<div class="row py-3">
  <% @ia.each do |cat| %>
    <div class="col-12">
      <div class="row">
        <h2 class="m-0 mr-3"><%= cat.title %></h2>
        <%= link_to 'Delete', admin_category_path(cat), class: 'btn btn-outline-danger mr-2' %>
        <%= link_to 'Edit', edit_admin_category_path(cat), class: 'btn btn-outline-success' %>
      </div>
      <ul class="row p-2">
        <%= 'No subcategories' if cat.subcategories.blank? %>

        <% cat.subcategories.each do |subcat| %>
          <li class="col-12 d-flex flex-row">
            <h5 class="m-0 mr-3"><%= subcat.title %></h5>
            <%= link_to 'Delete', admin_category_path(subcat), class: 'btn btn-outline-danger btn-sm mr-2' %>
            <%= link_to 'Edit', edit_admin_category_path(subcat), class: 'btn btn-outline-success btn-sm' %>
          </li>
        <% end %>
      </ul>
    </div>
    <% end unless @ia.blank? %>
</div>
