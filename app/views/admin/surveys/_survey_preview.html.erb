<div class="row border">
  <div class="col-12 bg-light p-2 justify-content-between align-items-center d-flex">
    <h3>Reader poll</h3>
    <div><%= @survey.start_date.strftime("%d %b") %> - <%= @survey.end_date.strftime("%d %b") %></div>
  </div>
  <div class="col-12 p-2">
    <div><%= @survey.question %></div>
  </div>
  <div class="col-12 mt-2">
    <% @survey.survey_answers.each do |answer| %>
      <div class="row justify-content-between">
        <div class="col-10">
          <%= answer.answer %>
        </div>
        <div class="col-2">
          <%= (100/@survey.votes*answer.votes).to_s + '%' unless @survey.votes == 0 %>
        </div>
      </div>
      <div class="progress mt-2">
        <div class="progress-bar" style="width: <%= (100/@survey.votes*answer.votes).to_s + '%' unless @survey.votes == 0 %>" role="progressbar" aria-valuenow="<%= (100/@survey.votes*answer.votes).to_s + '%' unless @survey.votes == 0 %>" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    <% end %>
  </div>
  <div class="col-12 mt-2">
    <%= link_to 'Delete', admin_survey_path(id:survey.id), class: 'btn btn-outline-danger', method: :delete %>
    <%= link_to 'Edit', edit_admin_survey_path(id:survey.id), class: 'btn btn-danger' %>
  </div>
</div>
