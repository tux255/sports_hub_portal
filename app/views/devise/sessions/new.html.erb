<div class="row">
  <div class="col-5">
    <div class="row">
      <%= image_tag('sign_up.jpg', :alt => 'signup image', class: 'p-0') %>
    </div>
  </div>
  <div class="col-7">
    <div class="row h-100 justify-content-center">
      <div class="col my-auto sign-form-wrapper">
        <h4>Log in to Sports Hub</h4>

        <div class="row d-flex flex-row pt-3">
          <div class="col">
            <a class='border rounded-circle p-1 border-dark fa fa-facebook text-decoration-none' href="#"></a>
            <a class='border rounded-circle p-1 border-dark fa fa-google text-decoration-none' href="#"></a>
          </div>
        </div>

        <%= form_for(resource, as: resource_name, url:
        session_path(resource_name)) do |f| %>
        <div class="form-group pt-3">
          <%= f.label :email, 'Email address', class: 'text-secondary small' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control rounded-0' %>
        </div>

        <div class="form-group pt-3">
          <div class="col justify-content-between d-flex">
            <%= f.label :password, class: 'text-secondary small' %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'small text-decoration-none' %>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class:'form-control rounded-0' %>
        </div>

        <div class="actions">
          <%= f.submit 'Log in', class: 'btn btn-primary rounded-0 w-100 mt-4' %>
        </div>
        <% end %> <%= render 'devise/shared/sign_in_links' %>
      </div>
    </div>
  </div>
</div>
