<!DOCTYPE html>
<html>
  <head>
    <title>Sports Blog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="alert alert-danger <%= key %>"><%= value %></div>
      <% end %>
    </div>

    <%= render 'layouts/admin/navigation' %>

    <div class="container-fluid">

      <%= render 'layouts/admin/categories_nav' %>

      <div class="row">
        <div class="col-1">
          <%= render 'layouts/admin/side_nav'  %>
        </div>
        <div class="col-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
