<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.published %></td>
      <td><%= link_to 'Show', post %></td>
    </tr>
    <% end %>
  </tbody>
</table>
